{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-maui-windows",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/BookLoggerApp/BookLoggerApp.csproj",
                "-f",
                "net9.0-windows10.0.19041.0",
                "-c",
                "Debug"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run-maui-windows",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/BookLoggerApp/BookLoggerApp.csproj",
                "-t:Run",
                "-f",
                "net9.0-windows10.0.19041.0",
                "-c",
                "Debug"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            }
        }
    ]
}