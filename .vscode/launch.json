{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MAUI Windows App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-maui-windows",
            "program": "${workspaceFolder}/BookLoggerApp/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/BookLoggerApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/BookLoggerApp/bin/Debug/net9.0-windows10.0.19041.0/win10-x64",
            "console": "internalConsole",
            "stopAtEntry": false,
            "justMyCode": false,
            "requireExactSource": false,
            "enableStepFiltering": true
        },
        {
            "name": "Run MAUI Windows App (no debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "run-maui-windows",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}