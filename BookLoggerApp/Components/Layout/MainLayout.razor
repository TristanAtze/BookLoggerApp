@inherits LayoutComponentBase
@using BookLoggerApp.Components.Layout

@code {
    protected override void OnInitialized()
    {
        System.Diagnostics.Debug.WriteLine("=== MainLayout OnInitialized ===");
        base.OnInitialized();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            System.Diagnostics.Debug.WriteLine("=== MainLayout OnAfterRender (first render) ===");
        }
        base.OnAfterRender(firstRender);
    }
}

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>

    <!-- Bottom Navigation for Mobile -->
    <BottomNavBar />
</div>
